<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="LaptopPosApp.Views.OrderDetailWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaptopPosApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converter="using:LaptopPosApp.Views.Converters"
    mc:Ignorable="d"
    Title="OrderDetailWindow">
    <ScrollView
        VerticalScrollBarVisibility="Auto"
        Padding="8">
        <ScrollView.Resources>
            <converter:PriceQuantityConverter
                x:Key="priceQuantity" />
            <converter:TotalPriceConverter
                x:Key="totalPrice" />
        </ScrollView.Resources>
        <StackPanel>
            <TextBlock
                Text="Chi tiết đơn hàng"
                Style="{StaticResource TitleTextBlockStyle}"
                HorizontalAlignment="Center"
                Margin="0,10,0,10" />
            <TextBlock
                Text="Danh sách sản phẩm"
                Style="{StaticResource SubtitleTextBlockStyle}" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Text="Tên sản phẩm"
                    Style="{StaticResource BodyStrongTextBlockStyle}"
                    Grid.Column="0"
                    Grid.Row="0"
                    HorizontalAlignment="Center" />
                <TextBlock
                    Text="Số lượng"
                    Style="{StaticResource BodyStrongTextBlockStyle}"
                    Grid.Column="1"
                    Grid.Row="0"
                    HorizontalAlignment="Center" />
                <TextBlock
                    Text="Giá"
                    Style="{StaticResource BodyStrongTextBlockStyle}"
                    Grid.Column="2"
                    Grid.Row="0"
                    HorizontalAlignment="Center" />
                <ListView
                    ItemsSource="{x:Bind CurrentOrder, Mode=OneWay}"
                    Grid.ColumnSpan="3"
                    Grid.Row="1"
                    Margin="10">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
                                        Width="*" />
                                    <ColumnDefinition
                                        Width="*" />
                                    <ColumnDefinition
                                        Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel
                                    Grid.Column="0"
                                    Orientation="Horizontal"
                                    Padding="8"
                                    VerticalAlignment="Center">
                                    <Image
                                        Source="/Assets/laptopDemoImg.jpg"
                                        Width="100"
                                        Stretch="UniformToFill" />
                                    <TextBlock
                                        Text="{Binding Product.Name}"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        VerticalAlignment="Center"
                                        Margin="10,0,0,0" />
                                </StackPanel>
                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}">
                                    <Run
                                        Text="x" />
                                    <Run
                                        Text="{Binding Quantity}" />
                                </TextBlock>
                                <TextBlock
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{Binding Converter={StaticResource priceQuantity}}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <TextBlock
                Text="Tổng thành tiền"
                Style="{StaticResource SubtitleTextBlockStyle}" />
            <TextBox
                Header="Nhập mã giảm giá"
                PlaceholderText="Mã giảm giá" />
            <TextBlock
                Text="Tổng thành tiền: 100.000.000đ"
                Style="{StaticResource BodyStrongTextBlockStyle}" />
            <TextBlock
                Text="Thông tin khách hàng"
                Style="{StaticResource SubtitleTextBlockStyle}" />
            <TextBox
                Name="CustomerName"
                Header="Nhập tên khách hàng"
                PlaceholderText="Tên" />
            <TextBox
                Name="CustomerEmail"
                Header="Nhập email khách hàng"
                PlaceholderText="Email" />
            <TextBox
                Name="CustomerPhone"
                Header="Nhập số điện thoại khách hàng"
                PlaceholderText="SĐT" />
            <TextBox
                Name="CustomerAddress"
                Header="Nhập địa chỉ khách hàng"
                PlaceholderText="Địa chỉ" />
            <CheckBox
                Name="IsDelivery"
                Content="Giao hàng tận nơi"
                Margin="0,10,0,10" />
            <RadioButtons
                Header="Chọn phương thức thanh toán:">
                <RadioButton
                    Content="Thanh toán bằng tiền mặt"
                    Name="PayByCash" />
                <RadioButton
                    Content="Thanh toán bằng ví điện tử"
                    Name="PayByEWallet" />
            </RadioButtons>
            <Button
                Content="Thanh toán" 
                Background="Blue"
                HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollView>
</Window>
