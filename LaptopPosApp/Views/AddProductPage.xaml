<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LaptopPosApp.Views.AddProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaptopPosApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <TextBox Header="Nhập tên sản phẩm"
                 Text="{x:Bind viewModel.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{x:Bind viewModel.NameWarningMessage, Mode=OneWay}" Foreground="Red" Margin="0, 5, 0, 5"/>
            <NumberBox Header="Nhập giá sản phẩm"
                 Text="{x:Bind viewModel.Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{x:Bind viewModel.PriceWarningMessage, Mode=OneWay}" Foreground="Red" Margin="0, 5, 0, 5"/>
            <TextBox Header="Nhập mô tả sản phẩm"
                 Text="{x:Bind viewModel.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{x:Bind viewModel.DescriptionWarningMessage, Mode=OneWay}" Foreground="Red" Margin="0, 5, 0, 5"/>
            <NumberBox  Header="Nhập số lượng sản phẩm"
                 Text="{x:Bind viewModel.Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{x:Bind viewModel.QuantityWarningMessage, Mode=OneWay}" Foreground="Red" Margin="0, 5, 0, 5"/>
            <ComboBox
                Name="CategoryComboBox"
                Header="Chọn phân loại"
                ItemsSource="{x:Bind viewModel.categories, Mode=OneWay}"
                DisplayMemberPath="Name"
                SelectedItem="{x:Bind viewModel.Category, Mode=TwoWay}"/>
            <TextBlock Text="{x:Bind viewModel.CategoryWarningMessage, Mode=OneWay}" Foreground="Red" Margin="0, 5, 0, 5"/>
            <ComboBox 
                Name="ManufacturerComboBox"
                Header="Chọn nhà sản xuất"
                ItemsSource="{x:Bind viewModel.manufacturers, Mode=OneWay}"
                DisplayMemberPath="Name"
                SelectedItem="{x:Bind viewModel.Manufacturer, Mode=TwoWay}"/>
            <TextBlock Text="{x:Bind viewModel.ManufacturerWarningMessage, Mode=OneWay}" Foreground="Red" Margin="0, 5, 0, 5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0, 0, 10, 0">
                    <Button Content="Thêm" x:Name="AddButton" HorizontalAlignment="Stretch"
                        Style="{StaticResource AccentButtonStyle}" Grid.Column="0"
                        IsEnabled="{x:Bind viewModel.IsValid, Mode=OneWay}"
                        Click="AddButton_Click"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="10, 0, 0, 0">
                    <Button Content="Hủy" x:Name="CancelButton" Grid.Column="1" HorizontalAlignment="Stretch"
                        Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
