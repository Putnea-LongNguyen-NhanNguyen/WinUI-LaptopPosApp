<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LaptopPosApp.Views.VouchersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaptopPosApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:tableView="using:WinUI.TableView"
    xmlns:converter="using:LaptopPosApp.Views.Converters"
    xmlns:custom="using:LaptopPosApp.Components"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Resources>
            <converter:DateTimeConverter
                x:Key="DateTimeConverter" />
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition
                Height="100" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="50" />
        </Grid.RowDefinitions>

        <StackPanel
            Orientation="Horizontal"
            Grid.Row="0"
            VerticalAlignment="Center">
            <Button
                Content="Thêm"
                x:Name="NewItemBtn"
                Click="NewItemBtn_Click"
                Style="{StaticResource AccentButtonStyle}" />
            <Button
                Content="Xóa"
                x:Name="DeleteItemBtn"
                Click="DeleteItemBtn_Click"
                Background="Red"
                Margin="10, 0, 0, 0" />
        </StackPanel>

        <tableView:TableView
            x:Name="MyTable"
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}"
            SelectionUnit="CellOrRow"
            SelectionMode="Extended"
            AutoGenerateColumns="False">
            <tableView:TableView.Columns>
                <tableView:TableViewTextColumn
                    Header="ID"
                    IsReadOnly="True"
                    Binding="{Binding Code, Mode=OneWay}" />
                <tableView:TableViewComboBoxColumn
                    Header="Loại khuyến mãi"
                    ItemsSource="{x:Bind ViewModel.VoucherTypes, Mode=OneWay}"
                    Binding="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <tableView:TableViewTextColumn
                    Header="Giá trị giảm"
                    Binding="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <tableView:TableViewTextColumn
                    Header="Số lượng"
                    Binding="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <tableView:TableViewTemplateColumn
                    Header="Ngày ban hành">
                    <tableView:TableViewTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CalendarDatePicker
                                DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                                Date="{Binding StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DateTimeConverter}}" />
                        </DataTemplate>
                    </tableView:TableViewTemplateColumn.CellTemplate>
                    <tableView:TableViewTemplateColumn.EditingTemplate>
                        <DataTemplate>
                            <CalendarDatePicker
                                DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                                Date="{Binding StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DateTimeConverter}}" />
                        </DataTemplate>
                    </tableView:TableViewTemplateColumn.EditingTemplate>
                </tableView:TableViewTemplateColumn>
                <tableView:TableViewTemplateColumn
                    Header="Hạn sử dụng">
                    <tableView:TableViewTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CalendarDatePicker
                                DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                                Date="{Binding EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DateTimeConverter}}" />
                        </DataTemplate>
                    </tableView:TableViewTemplateColumn.CellTemplate>
                    <tableView:TableViewTemplateColumn.EditingTemplate>
                        <DataTemplate>
                            <CalendarDatePicker
                                DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                                Date="{Binding EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DateTimeConverter}}" />
                        </DataTemplate>
                    </tableView:TableViewTemplateColumn.EditingTemplate>
                </tableView:TableViewTemplateColumn>
            </tableView:TableView.Columns>
        </tableView:TableView>
        <custom:PaginationControl
            Grid.Row="2"
            CurrentPage="{x:Bind ViewModel.CurrentPage, Mode=TwoWay}"
            TotalPage="{x:Bind ViewModel.PageCount, Mode=OneWay}"
            PerPage="{x:Bind ViewModel.PerPage, Mode=TwoWay}">
        </custom:PaginationControl>
    </Grid>
</Page>
