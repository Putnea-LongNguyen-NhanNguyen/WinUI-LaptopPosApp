<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LaptopPosApp.Views.ManufacturersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaptopPosApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:tableView="using:WinUI.TableView"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
            <Button Content="Thêm hãng" Click="NewItemButton_Click"/>
            <Button Content="Sửa" Click="EditButton_Click" x:Name="EditButton" IsEnabled="False"/>
            <Button Content="Xóa" Click="DeleteButton_Click"/>
        </StackPanel>

        <tableView:TableView 
            x:Name="MyTable"
            Grid.Row="1" 
            ItemsSource="{x:Bind ViewModel.Items, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectionChanged="MyTable_SelectionChanged"
            SelectionUnit="Row"
            SelectionMode="Extended"
            AutoGenerateColumns="False">
            <tableView:TableView.Columns>
                <tableView:TableViewTextColumn Header="ID"  IsReadOnly="True"
                    Binding="{Binding ID, Mode=OneWay}"/>
                <tableView:TableViewTextColumn Header="Tên hãng" IsReadOnly="True"
                    Binding="{Binding Name, Mode=OneWay}"/>
                <tableView:TableViewTextColumn Header="Số lượng sản phẩm" IsReadOnly="True"
                    Binding="{Binding ProductCount, Mode=OneWay}"/>
            </tableView:TableView.Columns>
        </tableView:TableView>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" Grid.Row="2">
            <StackPanel Orientation="Horizontal" x:Name="PageButtonContainer">
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
