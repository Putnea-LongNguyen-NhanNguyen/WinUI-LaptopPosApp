<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LaptopPosApp.Views.ManufacturersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaptopPosApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:tableView="using:WinUI.TableView"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
            <Button Content="Thêm hãng" Click="NewItemButton_Click" Style="{StaticResource AccentButtonStyle}"/>
            <Button Content="Xóa" Click="DeleteButton_Click" Background="Red" Margin="10, 0, 0, 0"/>
        </StackPanel>

        <tableView:TableView 
            x:Name="MyTable"
            Grid.Row="1" 
            ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}"
            SelectionUnit="Row"
            SelectionMode="Extended"
            AutoGenerateColumns="False">
            <tableView:TableView.Columns>
                <tableView:TableViewTextColumn Header="ID" IsReadOnly="True"
                    Binding="{Binding ID, Mode=OneWay}"/>
                <tableView:TableViewTextColumn Header="Tên hãng"
                    Binding="{Binding Name, Mode=TwoWay}"/>
                <tableView:TableViewTextColumn Header="Số lượng sản phẩm" IsReadOnly="True"
                    Binding="{Binding Products.Count, Mode=OneWay, FallbackValue=0}"/>
            </tableView:TableView.Columns>
        </tableView:TableView>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0"
                        VerticalAlignment="Center" Padding="20, 0, 0, 0">
                <TextBlock Text="Items per page" VerticalAlignment="Center" Margin="0, 0, 10, 0"/>
                <ComboBox SelectedValue="{x:Bind ViewModel.PerPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          ItemsSource="{x:Bind ViewModel.PerPageOptions}"
                          x:Name="PerPageComboBox"/>

                <TextBlock VerticalAlignment="Center" Margin="20, 0, 0, 0">
                    <Run>Showing </Run>
                    <Run Text="{x:Bind ViewModel.Items.Count, Mode=OneWay}"/>
                    <Run> of </Run>
                    <Run Text="{x:Bind ViewModel.Count, Mode=OneWay}"/>
                    <Run> item(s)</Run>
                </TextBlock>
            </StackPanel>

            <StackPanel Orientation="Horizontal" x:Name="PageButtonContainer" Grid.Column="1" 
                        VerticalAlignment="Center" HorizontalAlignment="Right" Padding="0, 0, 20, 0">
                <Button Margin="0, 0, 10, 0" Tag="FirstPage" Click="PageButton_Click"
                        IsEnabled="{x:Bind ViewModel.FirstPageBtnEnabled, Mode=OneWay}">
                    <Image Source="/Assets/keyboard_double_arrow_left.png" Width="20" Height="20"/>
                </Button>
                <Button Margin="0, 0, 10, 0" Tag="PreviousPage" Click="PageButton_Click"
                        IsEnabled="{x:Bind ViewModel.PreviousPageBtnEnabled, Mode=OneWay}">
                    <Image Source="/Assets/chevron_left.png" Width="20" Height="20"/>
                </Button>

                <TextBox Text="1" KeyDown="PageNumberInputTextBox_KeyDown" LostFocus="PageNumberInputTextBox_LostFocus"
                     x:Name="PageNumberInputTextBox" InputScope="TelephoneNumber"/>
                <TextBlock VerticalAlignment="Center" Margin="10, 0, 0, 0">
                    <Run>of </Run>
                    <Run Text="{x:Bind ViewModel.PageCount, Mode=OneWay}"/>
                </TextBlock>

                <Button Margin="10, 0, 0, 0" Tag="NextPage" Click="PageButton_Click"
                    IsEnabled="{x:Bind ViewModel.NextPageBtnEnabled, Mode=OneWay}">
                    <Image Source="/Assets/chevron_right.png" Width="20" Height="20"/>
                </Button>
                <Button Margin="10, 0, 0, 0" Tag="LastPage" Click="PageButton_Click"
                    IsEnabled="{x:Bind ViewModel.LastPageBtnEnabled, Mode=OneWay}">
                    <Image Source="/Assets/keyboard_double_arrow_right.png" Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
