<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LaptopPosApp.Views.ReturnHistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaptopPosApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:LaptopPosApp.Views.Converters"
    xmlns:tableView="using:WinUI.TableView"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:DateTimeToStringConverter
            x:Key="dateTimeToString" />
        <converters:CurrencyConverter
            x:Key="currencyConverter" />
        <converters:DeliveryStatusConverter
            x:Key="deliveryStatusConverter" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="100" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel
            Orientation="Horizontal"
            Grid.Row="0"
            VerticalAlignment="Center">
            <TextBlock
                Text="Lịch sử đổi trả"
                Padding="20,0,0,0"
                Style="{StaticResource TitleLargeTextBlockStyle}" />
        </StackPanel>
        <tableView:TableView
            x:Name="MyOrderTable"
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.ReturnedOrderProducts, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectionUnit="CellOrRow"
            AutoGenerateColumns="False">
            <tableView:TableView.Columns>
                <tableView:TableViewTextColumn
                    Header="ID đơn hàng"
                    IsReadOnly="True"
                    Binding="{Binding OrderID, Mode=OneWay}" />
                <tableView:TableViewTextColumn
                    Header="ID sản phẩm"
                    IsReadOnly="True"
                    Binding="{Binding ProductID, Mode=OneWay}" />
                <tableView:TableViewTextColumn
                    Header="Tên sản phẩm"
                    IsReadOnly="True"
                    Binding="{Binding Product.Name, Mode=OneWay}" />
                <tableView:TableViewTextColumn
                    Header="Số lượng trả"
                    IsReadOnly="True"
                    Binding="{Binding ReturnAmount, Mode=OneWay}" />
                <tableView:TableViewTextColumn
                    Header="Khách hàng"
                    IsReadOnly="True"
                    Binding="{Binding Customer.Name, Mode=OneWay}" />
                <tableView:TableViewTemplateColumn
                    Header="Ngày trả hàng">
                    <tableView:TableViewTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CalendarDatePicker
                                Date="{Binding ReturnedDate, Mode=OneWay}" />
                        </DataTemplate>
                    </tableView:TableViewTemplateColumn.CellTemplate>
                </tableView:TableViewTemplateColumn>
                
            </tableView:TableView.Columns>
        </tableView:TableView>
    </Grid>
</Page>
