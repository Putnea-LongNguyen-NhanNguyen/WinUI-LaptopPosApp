<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LaptopPosApp.Views.CreateOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaptopPosApp.Views"
    xmlns:custom="using:LaptopPosApp.Components"
    xmlns:converter="using:LaptopPosApp.Views.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate
            x:Name="ProductGridViewTemplate">
            <Border
                BorderThickness="2"
                BorderBrush="Black"
                CornerRadius="18"
                Margin="5">
                <StackPanel
                    Orientation="Vertical"
                    Width="200">
                    <Image
                        Source="/Assets/laptopDemoImg.jpg"
                        Stretch="UniformToFill" />
                    <TextBlock
                        Text="{Binding Name, Mode=OneWay}"
                        Padding="3"
                        TextWrapping="Wrap"
                        TextTrimming="CharacterEllipsis" />
                    <Grid
                        Background="Cyan"
                        Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="*" />
                            <ColumnDefinition
                                Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1">
                            <Run
                                Text="còn" />
                            <Run
                                Text="{Binding Quantity, Mode=OneWay}" />
                            <Run
                                Text="cái" />
                        </TextBlock>
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center">
                            <Run
                                Text="Giá:" />
                            <Run
                                Text="{Binding Price, Converter={StaticResource currency}, Mode=OneWay}"
                                FontWeight="SemiBold" />
                        </TextBlock>
                        <Button
                            Name="Cart"
                            CornerRadius="15"
                            Grid.Column="1"
                            Grid.Row="1"
                            Click="CartButton_Click"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                            <FontIcon
                                Glyph="&#xE7BF;"
                                HorizontalAlignment="Center" />
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate
            x:Name="ProductListViewTemplate">
            <StackPanel
                Orientation="Horizontal"
                Padding="0,5,0,5">
                <Image
                    Source="/Assets/laptopDemoImg.jpg"
                    Width="100" />
                <StackPanel
                    Padding="5">
                    <TextBlock
                        Text="{Binding Product.Name, Mode=OneWay}"
                        TextWrapping="Wrap"
                        TextTrimming="CharacterEllipsis"
                        Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock>
                        <Run
                            Text="Đơn giá:"/>
                        <Run
                            Text="{Binding Converter={StaticResource priceQuantity}, Mode=OneWay}"
                            FontWeight="Bold" />
                    </TextBlock>
                    <StackPanel
                        Orientation="Horizontal"
                        VerticalAlignment="Bottom">
                        <Button
                            Name="RemoveFrom"
                            Click="RemoveButton_Click">
                            <FontIcon
                                Glyph="&#xECC9;" />
                        </Button>
                        <NumberBox
                            Margin="5"
                            Name="Wanted"
                            MaxHeight="30"
                            MaxWidth="30"
                            Maximum="{Binding Product.Quantity, Mode=OneWay}"
                            Minimum="1"
                            Value="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Button
                            Name="AddTo"
                            Click="AddButton_Click">
                            <FontIcon
                                Glyph="&#xECC8;" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
        <converter:CurrencyConverter
            x:Key="currency" />
        <converter:PriceQuantityConverter
            x:Key="priceQuantity" />
        <converter:TotalPriceConverter
            x:Key="totalPrice" />
    </Page.Resources>

    <ScrollView
        HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="*" />
                <RowDefinition
                    Height="50" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Column="0"
                Grid.Row="0">
                <AutoSuggestBox
                    Name="SearchBar"
                    PlaceholderText="Type laptop name"
                    TextChanged="{x:Bind ViewModel.AutoSuggestBox_TextChanged}"
                    QueryIcon="Find"
                    QuerySubmitted="{x:Bind ViewModel.AutoSuggestBox_QuerySubmitted}"
                    SuggestionChosen="{x:Bind ViewModel.AutoSuggestBox_SuggestionChosen}" />
                <GridView
                    x:Name="LaptopGridView"
                    ItemTemplate="{StaticResource ProductGridViewTemplate}"
                    ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}">

                    <GridView.ItemContainerStyle>
                        <Style
                            TargetType="GridViewItem"
                            BasedOn="{StaticResource DefaultGridViewItemStyle}">
                            <Setter
                                Property="Margin"
                                Value="5, 5, 5, 5" />
                        </Style>
                    </GridView.ItemContainerStyle>

                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid
                                x:Name="MaxItemsWrapGrid"
                                MaximumRowsOrColumns="4"
                                Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>

            </StackPanel>
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Padding="12">
                <TextBlock
                    Text="Current Order"
                    Style="{StaticResource TitleTextBlockStyle }" />
                <ListView
                    x:Name="OrderListView"
                    ItemTemplate="{StaticResource ProductListViewTemplate}"
                    ItemsSource="{x:Bind ViewModel.CurrentOrder, Mode=OneWay}"
                    SelectionMode="None">
                    <ListView.ItemContainerStyle>
                        <Style
                            TargetType="ListViewItem">
                            <Setter
                                Property="HorizontalContentAlignment"
                                Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
                <TextBlock
                    Text="{x:Bind ViewModel.CurrentOrder, Converter={StaticResource totalPrice},Mode=OneWay}"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Margin="0, 10, 0, 0" />
            </StackPanel>
            <custom:PaginationControl
                Grid.Row="1"
                Grid.Column="0"
                CurrentPage="{x:Bind ViewModel.CurrentPage, Mode=TwoWay}"
                TotalPage="{x:Bind ViewModel.PageCount, Mode=OneWay}"
                PerPage="{x:Bind ViewModel.PerPage, Mode=TwoWay}">
            </custom:PaginationControl>
        </Grid>
    </ScrollView>
</Page>
