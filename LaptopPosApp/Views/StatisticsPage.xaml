<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="LaptopPosApp.Views.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:LaptopPosApp.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer HorizontalScrollMode="Disabled"
                  VerticalScrollBarVisibility="Auto"
                  VerticalContentAlignment="Stretch">
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Stretch"
                    Margin="0, 10, 0, 0">

            <StackPanel Orientation="Vertical"
                        Padding="10, 5, 10, 5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Left"
                               Margin="0, 0, 10, 0"
                               Text="Doanh thu thuần theo"
                               VerticalAlignment="Center"
                               FontSize="16" />
                    <ComboBox ItemsSource="{x:Bind ViewModel.Revenues.RevenueFilters, Mode=OneWay}"
                              VerticalAlignment="Center"
                              SelectedIndex="{x:Bind ViewModel.Revenues.RevenueFilterIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title, Mode=OneWay}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0, 10, 0, 0">
                    <DatePicker Header="Từ ngày"
                                Margin="0, 0, 20, 0"
                                FontSize="16"
                                Date="{x:Bind ViewModel.Revenues.StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <DatePicker Header="Tới ngày"
                                FontSize="16"
                                Date="{x:Bind ViewModel.Revenues.EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0, 20, 0, 0"
                            >
                    <TextBlock VerticalAlignment="Center" FontSize="16">
                        Tổng doanh thu trong khoảng thời gian đang hiển thị: 
                        <Run Text="{x:Bind ViewModel.Revenues.CurrentRevenueTimeSpanSum, Mode=OneWay}" FontSize="20"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <Grid Height="400">
                <lvc:CartesianChart Grid.Row="1"
                                    Series="{x:Bind ViewModel.Revenues.RevenueSeries, Mode=OneWay}"
                                    XAxes="{x:Bind ViewModel.Revenues.XAxes, Mode=OneWay}"
                                    YAxes="{x:Bind ViewModel.Revenues.YAxes, Mode=OneWay}"
                                    ZoomMode="X" />
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
