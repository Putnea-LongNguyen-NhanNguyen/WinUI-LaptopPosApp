<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LaptopPosApp.Views.StatisticsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaptopPosApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical" Padding="10, 5, 10, 5" Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Left" Margin="0, 0, 10, 0" Text="Doanh thu thuần theo" VerticalAlignment="Center" FontSize="16"/>
                    <ComboBox ItemsSource="{x:Bind ViewModel.RevenueFormatters, Mode=OneWay}" VerticalAlignment="Center"
                            SelectedIndex="{x:Bind ViewModel.RevenueFormatterIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title, Mode=OneWay}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <DatePicker Header="Từ ngày" Margin="0, 0, 10, 0"
                        Date="{x:Bind ViewModel.StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <DatePicker Header="Tới ngày"
                        Date="{x:Bind ViewModel.EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <TextBlock Text="{x:Bind ViewModel.CurrentRevenueTimeSpanSum, Mode=OneWay}" Margin="0, 10, 0, 0"
                           FontSize="20"/>
            </StackPanel>

            <lvc:CartesianChart Grid.Row="1" x:Name="RevenueChart"
                Series="{x:Bind ViewModel.RevenueSeries, Mode=OneWay}"
                XAxes="{x:Bind ViewModel.XAxes, Mode=OneWay}"
                YAxes="{x:Bind ViewModel.YAxes, Mode=OneWay}"
                ZoomMode="X"/>
        </Grid>
    </Grid>
</Page>
